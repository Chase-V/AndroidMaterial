<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidMaterial" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">@color/teal_700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Mars" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/marsPrimaryColor</item>
        <item name="colorPrimaryVariant">@color/marsPrimaryDarkColor</item>
        <item name="colorOnPrimary">@color/marsPrimaryTextColor</item>
        <item name="colorSecondary">@color/marsSecondaryColor</item>
        <item name="colorSecondaryVariant">@color/marsSecondaryDarkColor</item>
        <item name="colorOnSecondary">@color/marsSecondaryTextColor</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorSurface">@color/marsPrimaryColor</item>
    </style>

    <style name="Theme.Uranus" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/uranusPrimaryColor</item>
        <item name="colorPrimaryVariant">@color/uranusPrimaryDarkColor</item>
        <item name="colorOnPrimary">@color/uranusPrimaryTextColor</item>
        <item name="colorSecondary">@color/uranusSecondaryColor</item>
        <item name="colorSecondaryVariant">@color/uranusSecondaryDarkColor</item>
        <item name="colorOnSecondary">@color/uranusSecondaryTextColor</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorSurface">@color/uranusPrimaryColor</item>
    </style>

    <style name="Theme.Mercury" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/mercuryPrimaryColor</item>
        <item name="colorPrimaryVariant">@color/mercuryPrimaryDarkColor</item>
        <item name="colorOnPrimary">@color/mercuryPrimaryTextColor</item>
        <item name="colorSecondary">@color/mercurySecondaryColor</item>
        <item name="colorSecondaryVariant">@color/mercurySecondaryDarkColor</item>
        <item name="colorOnSecondary">@color/mercurySecondaryTextColor</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorSurface">@color/mercuryPrimaryColor</item>
    </style>

    <style name="Theme.BottomSheet.POTD.Header" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="Theme.BottomSheet.POTD.Text" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_black</item>
    </style>
</resources>